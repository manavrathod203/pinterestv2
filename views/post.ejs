<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 text-white px-20 py-20">
  <div class="flex gap-20 justify-center min-h-screen">
    <div class="w-1/3  overflow-hidden rounded-lg">
      <img src="/images/uploads/<%= image %>" alt="" class="w-full ">
    </div>
    <div class="flex flex-col w-1/3">
      <h1 class="text-4xl"><%= title %></h1>
      <hr class="border-0 border-b opacity-20 mt-5">
      <h3 class="text-xl mt-10"><%= description %></h3>
      <hr class="border-0 border-b opacity-20 mt-5">
      <div class="flex gap-5 items-center mt-5">
        <div class="w-24 h-24  rounded-full overflow-hidden">
          <img src="/images/uploads/<%= user.profileImage %>" alt="" class="w-full h-full object-cover" />
        </div>
        <div class="user-details flex flex-col justify-center ">
          <h1 class="text-2xl font-semibold "><%= user.name %></h1>
          <h3 class="text-md opacity-60">@<%= user.username %></h3>
        </div>
      </div>

    </div>
  </div>

</div>

<% include ./partials/footer.ejs %>