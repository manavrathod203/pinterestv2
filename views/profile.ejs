<% include ./partials/header.ejs %>

<div class="profile-container w-full min-h-screen bg-zinc-800 text-white pt-1 flex flex-col items-center px-10 gap-10">
  <form id="uploadForm" action="/fileUpload" method="post" enctype="multipart/form-data" hidden>
    <input type="file" name="image" class="">
  </form>
  <div class="profile-details flex flex-col items-center mt-20">
    <div class="relative">
      <span id="uploadIcon" class="w-10 h-10 absolute rounded-full bg-zinc-300 bottom-0 right-0 flex items-center justify-center">
        <i class="ri-pencil-line text-zinc-900"></i>
      </span>
      <div class="w-32 h-32  rounded-full overflow-hidden">
        <img src="/images/uploads/<%= user.profileImage %>" alt="" class="w-full h-full object-cover" />
      </div>
    </div>
    <h1 class="text-2xl font-semibold mt-5"><%= user.name %></h1>
    <h3 class="text-md opacity-60">@<%= user.username %></h3>
    <!-- <a href="/edit" class="px-7 py-2 bg-zinc-700 rounded-md font-semibold text-sm mt-5">Edit</a> -->
    <a href="/add" class="px-7 py-2 bg-red-600 rounded-md font-semibold text-sm mt-2">
      Add New Post
    </a>
  </div>

  <hr class="w-full border-0 border-b border-zinc-600" />

  <div class="w-full boards flex flex-wrap gap-10">
    <div class="card">
      <a href="/show/posts" class="">
        <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
          <img src="/images/uploads/<%= user?.posts[0]?.image %>" alt="" class="w-full h-full object-cover" />
        </div>
        <a href="/show/posts" class="inline-block text-xl font-semibold mt-3">Your Uploaded pins</a>
        <h5 class="text-sm font-md opacity-60"><%= user?.posts?.length %> pins</h5>
      </a>
    </div>
  </div>
</div>

<script>
  document.querySelector("#uploadIcon").addEventListener("click", () => {
    document.querySelector("#uploadForm input").click();
  })

  document.querySelector("#uploadForm input").addEventListener("change", () => {
    document.querySelector("#uploadForm").submit();
  })
</script>

<% include ./partials/footer.ejs %>