<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
  <div class="cards flex flex-wrap gap-10">
    <% posts.forEach(elem => {%>
        <a href="/show/posts/<%= elem._id %>" class="">
            <div class="card w-40">
              <div class="w-full h-52 rounded-lg bg-blue-300 overflow-hidden">
                <img src="/images/uploads/<%= elem.image %>" alt="" class="w-full h-full object-cover">
              </div>
              <h5 class="text-md font-semibold mt-3"><%= elem.title %></h5>
              <h3 class="text-xs opacity-60">@<%= elem.user.username %></h3>
            </div>
        </a>
    <%}); %>
  </div>
</div>

<% include ./partials/footer.ejs %>