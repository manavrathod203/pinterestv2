<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-2xl font-semibold">Create a new post</h1>
        <hr class="border-0 border-b opacity-10 mt-3">
        <form action="/createPost" method="post" enctype="multipart/form-data" class="">
            <input type="file" class=" block w-1/3 px-3 py-2  mt-2" name="postImage">
            <input type="text" class="text-black block w-1/3 px-3 py-2 border-2 rounded-md mt-2" placeholder="Title" name="title">
            <textarea type="text" class="text-black block w-1/3 h-60 px-3 py-2 border-2 rounded-md mt-2" placeholder="Description" name="description"></textarea>
            <input type="submit" class="block w-1/3 px-3 py-2 bg-red-600 rounded-md mt-2" value="Create Post">

        </form>
    </div>

